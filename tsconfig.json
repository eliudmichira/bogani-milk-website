{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    // These files will be compiled by this tsconfig.json directly,
    // if compilerOptions like 'outDir' are configured.
    // If this file is purely for orchestrating 'references',
    // 'include' might be empty.
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "files": [
    // 'files' is an alternative to 'include'.
    // If 'include' is used comprehensively, 'files' can be empty.
    // For a "solution-style" tsconfig that only uses 'references' and doesn't
    // compile files itself, both 'files' and 'include' are typically empty.
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}